<form method="post" action="/subscription/edit">
    <input type="hidden" name="id" value="{{subscription.id}}">
    <div class="form-group">
        <label for="user_id">Kullanıcı</label>
        <select disabled class="form-control" name="user_id" id="user_id">
            {{#each users}}
                <option value="{{this.id}}"
                    {{#ifeq ../subscription.user_id this.id}} selected {{/ifeq}}>
                    {{this.username}}
                </option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="provider_id">Hizmet Sağlayıcı</label>
        <select disabled class="form-control" name="provider_id" id="provider_id">
            {{#each providers}}
                <option value="{{this.id}}"
                    {{#ifeq ../subscription.provider_id this.id}} selected {{/ifeq}}>
                    {{this.corporate_name}}
                </option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="created_at">Kayıt Tarihi</label>
        <input  value="{{#formatDate subscription.created_at}}{{/formatDate}}" disabled autocomplete="off" type="date" class="form-control" id="created_at" name="created_at" value="{{subscription.created_at}}">
    </div>
</form>
