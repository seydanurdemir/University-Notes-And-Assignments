<form method="post" action="/wallet/upload">
    <input type="hidden" name="id" value="{{wallet.id}}">
    <input type="hidden" name="destination_id" value="{{wallet.id}}">
    <div class="form-group">
        <label for="wallet_name">Cüzdan</label>
        <input value="{{wallet.wallet_name}}" required disabled autocomplete="off" type="text" class="form-control" id="wallet_name">
    </div>
    <div class="form-group">
        <label for="source_id">Kart</label>
        <select required class="form-control" name="source_id" id="source_id">
            {{#each cards}}
                <option value="{{this.id}}">
                    {{this.card_number}}
                </option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="transaction_amount">Tutar</label>
        <input required autocomplete="off" type="number" class="form-control" id="transaction_amount" name="transaction_amount" min="0" max="999999.99">
    </div>

    <button type="submit" class="btn btn-primary">Yükle</button>
</form>