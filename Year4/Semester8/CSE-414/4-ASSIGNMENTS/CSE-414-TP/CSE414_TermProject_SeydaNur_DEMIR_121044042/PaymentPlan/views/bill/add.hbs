
<form method="post" action="/bill/add">
    <div class="form-group">
        <label for="subscription_id">Abonelik</label>
        <select required class="form-control" name="subscription_id" id="subscription_id">
            {{#each subscriptions}}
                <option value="{{this.id}}">
                    {{this.subscription_number}}
                </option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="amount">Tutar</label>
        <input required type="number" min="0.00" max="10000.00" step="0.01" class="form-control" id="amount" name="amount">
    </div>
    <div class="form-group">
        <label for="first_read_date">İlk Okuma Tarihi</label>
        <input required autocomplete="off" type="date" class="form-control" id="first_read_date" name="first_read_date">
    </div>
    <div class="form-group">
        <label for="last_read_date">Son Okuma Tarihi</label>
        <input required autocomplete="off" type="date" class="form-control" id="last_read_date" name="last_read_date">
    </div>
    <div class="form-group">
        <label for="due_date">Son Ödeme Tarihi</label>
        <input required autocomplete="off" type="date" class="form-control" id="due_date" name="due_date">
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>