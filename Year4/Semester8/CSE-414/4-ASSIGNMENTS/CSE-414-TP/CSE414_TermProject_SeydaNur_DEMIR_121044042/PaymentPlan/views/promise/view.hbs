<form>
    <div class="form-group">
        <label for="username">Kullanıcı</label>
        <input value="{{promise.username}}"disabled autocomplete="off" type="text" class="form-control" id="username" name="username">
    </div>
    <div class="form-group">
        <label for="subscription_number">Abonelik</label>
        <input value="{{promise.subscription_number}}"disabled autocomplete="off" type="text" class="form-control" id="subscription_number" name="subscription_number">
    </div>
    <div class="form-group">
        <label for="bill_number">Fatura</label>
        <input value="{{promise.bill_number}}"disabled autocomplete="off" type="text" class="form-control" id="bill_number" name="bill_number">
    </div>
    <div class="form-group">
        <label for="amount">Tutar</label>
        <input value="{{promise.amount}}" disabled type="number" min="0.00" max="10000.00" step="0.01" class="form-control" id="amount" name="amount">
    </div>
    <div class="form-group">
        <label for="status">Durum</label>
        <input value="{{#promiseStatus promise.status_id}}{{/promiseStatus}}" disabled type="text" class="form-control" id="status" name="status">
    </div>
    <div class="form-group">
        <label for="due_date">Son Ödeme Tarihi</label>
        <input value="{{#formatDate promise.due_date}}{{/formatDate}}" disabled autocomplete="off" type="date" class="form-control" id="due_date" name="due_date">
    </div>
    <div class="form-group">
        <label for="promise_date">Söz Tarihi</label>
        <input  value="{{promise.promise_date}}"disabled autocomplete="off" type="date" class="form-control" id="promise_date" name="promise_date">
    </div>
    <div class="form-group">
        <label for="promise_due_date">Söz Verilen Ödeme Tarihi</label>
        <input value="{{promise.promise_due_date}}" disabled autocomplete="off" type="date" class="form-control" id="promise_due_date" name="promise_due_date">
    </div>
</form>